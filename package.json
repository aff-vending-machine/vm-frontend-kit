{
  "name": "vm-frontend-kit",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "A web application designed for vending machine.",
  "keywords": [
    "webapp",
    "vending machine",
    "svelte"
  ],
  "author": {
    "name": "Tanawat Hongthai",
    "email": "ztrixack.th@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aff-vending-machine/vm-frontend-kit.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "build:css": "postcss src/styles.css -o dist/styles.css",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint '**/*.css'",
    "format": "prettier --ignore-path .gitignore --write .",
    "test:unit": "vitest",
    "commit": "git-cz",
    "prepare": "husky install && chmod ug+x .husky/*",
    "release": "commit-and-tag-version --no-verify --skip.tag"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "mem": "^9.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/cz-commitlint": "^18.2.0",
    "@iconify/svelte": "^3.1.4",
    "@playwright/test": "^1.39.0",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.16",
    "commit-and-tag-version": "^11.3.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.34.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.6",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "svelte": "^4.2.2",
    "svelte-check": "^3.5.2",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
