{
  "name": "vm-frontend-kit",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "A web application designed for vending machine.",
  "keywords": [
    "webapp",
    "vending machine",
    "svelte"
  ],
  "author": {
    "name": "Tanawat Hongthai",
    "email": "ztrixack.th@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aff-vending-machine/vm-frontend-kit.git"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "build:css": "postcss --use tailwindcss -o build/main.css src/app.css",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "format": "eslint --ignore-path .gitignore --fix . && prettier --ignore-path .gitignore --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "hook:commit-msg": "npx husky add .husky/commit-msg 'npx --no -- commitlint --edit $1'",
    "hook:pre-commit": "npx husky add .husky/pre-commit 'pnpm exec lint-staged'",
    "hook:pre-push": "npx husky add .husky/pre-push 'pnpm check'",
    "hook": "pnpm hook:commit-msg && pnpm hook:pre-commit && pnpm hook:pre-push && chmod ug+x .husky/*",
    "prepare": "husky install && chmod ug+x .husky/*",
    "precommit": "pnpm format && pnpm lint",
    "commit": "git-cz",
    "release": "commit-and-tag-version --no-verify --skip.tag"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/cz-commitlint": "^18.2.0",
    "@iconify/svelte": "^3.1.4",
    "@playwright/test": "^1.39.0",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.3",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/papaparse": "^5.3.11",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.16",
    "commit-and-tag-version": "^12.0.0",
    "commitizen": "^4.3.0",
    "cssnano": "^6.0.1",
    "date-picker-svelte": "^2.9.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.34.1",
    "husky": "^8.0.3",
    "inquirer": "^8.2.6",
    "lint-staged": "^15.0.2",
    "papaparse": "^5.4.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "sass": "^1.69.5",
    "svelte": "^4.2.2",
    "svelte-check": "^3.5.2",
    "svelte-forms": "^2.3.1",
    "svelte-hamburgers": "^4.2.0",
    "svelte-tippy": "^1.3.2",
    "sveltekit-i18n": "^2.4.2",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.32.4",
    "xlsx": "^0.18.5"
  }
}
